# Production Environment Configuration
# Copy to .env.prod and fill in your values

# Domain Configuration
DOMAIN=your-domain.com
ACME_EMAIL=admin@your-domain.com

# API Keys
OPENAI_API_KEY=your-openai-api-key

# Database Passwords (use strong passwords!)
NEO4J_PASSWORD=strong-neo4j-password
REDIS_PASSWORD=strong-redis-password

# External Services
UNSTRACT_API_URL=http://docs.cynorsense.com:80/api/v2

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=strong-grafana-password
TRAEFIK_AUTH=admin:$$2y$$10$$... # Generate with: htpasswd -nb admin password

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Resource Limits (adjust based on your server)
API_MEMORY_LIMIT=2G
NEO4J_MEMORY_LIMIT=8G
REDIS_MEMORY_LIMIT=1G