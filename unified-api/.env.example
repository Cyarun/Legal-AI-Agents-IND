# Unified Legal AI API Configuration

# API Configuration
APP_NAME="Legal AI Unified API"
APP_VERSION="1.0.0"
API_PREFIX="/api/v1"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8080
WORKERS=4

# Graphiti Configuration
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="password"
NEO4J_DATABASE="neo4j"

# Unstract Configuration
UNSTRACT_API_URL="http://docs.cynorsense.com:80/api/v2"
UNSTRACT_DEFAULT_ORG_ID=""
UNSTRACT_DEFAULT_WORKFLOW_ID=""

# LLM Configuration
OPENAI_API_KEY="your-openai-api-key"
LLM_MODEL="gpt-4o-mini"
EMBEDDING_MODEL="text-embedding-3-small"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL=3600

# Security Configuration
API_KEY_PREFIX="sk_unified_"
JWT_SECRET_KEY="your-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Crawling Configuration
CRAWLER_USER_AGENT="LegalAI/1.0"
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_DELAY=1.0

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"